# ============================================================================
# AccessLint Backend Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=accesslint
POSTGRES_USER=accesslint_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SSL=false

# Azure Key Vault (Production)
KEY_VAULT_URL=https://accesslint-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=2592000

# Note: Azure OpenAI credentials (GPT-5) are hardcoded in backend/src/config/azureOpenAI.ts

# Azure Blob Storage Configuration
BLOB_STORAGE_ACCOUNT=accesslintstorage
BLOB_STORAGE_KEY=your_blob_storage_key_here
BLOB_CONTAINER_VSIX=vsix-files
BLOB_CONTAINER_REPORTS=test-reports
BLOB_CONTAINER_UPLOADS=user-uploads

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT_PER_HOUR=100
RATE_LIMIT_DEFAULT_TOKENS_PER_DAY=100000

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,https://accesslint.azurewebsites.net

# Logging Configuration
LOG_LEVEL=info

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_instrumentation_key_here

# Feature Flags
ENABLE_AI_VALIDATION=true
ENABLE_RATE_LIMITING=true

